<head>
	
	<title>appointments</title>
</head>
<style type="text/css">
	body {
			margin: auto;
			padding: 50px 30px 10px 10px;
			width: 95%;
			background-color: black;
		}
		#container {
			margin: auto;
			font-size: 15px;
			background-color: white;
			padding :15px 10px 10px 10px;
		}
		table{
			width: 100%;
		}
		input{
			border: solid white 1px;
			width: 100%;
			
		}
		#hos{
			padding-left: 90%;
			padding-top: 3px;
		}
		img{
			height: 50px;
		}
	</style>

<body>
	<img src="https://static1.squarespace.com/static/58c6fc4a37c581154f75cdd2/t/58e662456a496356f0430f90/1604006272177/">
	<div id="container">
			<table border="1">
				
					<th>Department</th>
					<th>Doctor</th>
					<th>Start session</th>
					<th>End session</th>
					<th>Appointment info</th>
					<th>View Details</th>

				<%
				var a=new Array();
			a[0]="Sunday"; a[1]="Monday"; a[2]="Tuesday"; a[3]="Wednesday"; a[4]="Thursday"; a[5]="Friday"; a[6]="Saturday";
			var d=new Date(); var curd=d.getDay()+1;%>
	        if(user2.length!=0){
	        user2.forEach(function(data){
	        %>
				<tr>
					<form method="POST" action="details">
					<td><input name="dname" value="<%=data.dname%>" readonly/></td>
					<td><input name="docname" value="<%=data.docname%>" readonly /></td>
					<td><input name="day" value="<%=a[data.day-1]%>" readonly /></td>
					<td><input name="start" value="<%=data.start%>"readonly/></td>
					<td><input name="end" value="<%=data.end%>"readonly/></td>
					<td><button type="submit" class="btn btn-primary">Click to view details</button></td>
					</form>
				</tr>
				<% }) %>
				<% } else{ %>
				<% } %>
			</table>
			<div id="hos">
				<strong><%=hos%></strong>
			</div>
	</div>
</body>

</html>
