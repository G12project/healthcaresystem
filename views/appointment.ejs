
 <!DOCTYPE html>
<html>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
	integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<link href="/css/appointment.css" rel="stylesheet" type="text/css">
<head>
	
	<title>appointments</title>
</head>


<body>
	<img src="https://static1.squarespace.com/static/58c6fc4a37c581154f75cdd2/t/58e662456a496356f0430f90/1604006272177/">
	<div id="container">
			<table border="1">
				
					<th>Department</th>
					<th>Doctor</th>
					<th>Start session</th>
					<th>End session</th>
					<th>Appointment info</th>
					<th>View Details</th>

				<%
				var a=new Array();
			a[0]="Sunday"; a[1]="Monday"; a[2]="Tuesday"; a[3]="Wednesday"; a[4]="Thursday"; a[5]="Friday"; a[6]="Saturday";
			%>
			<%
			if(user2.length!=0){
			user2.forEach(function(data){
			%>
			<tr>
					<td><%=data.docname%></td>
					<td><%=a[data.day-1]%></td>
					<td><%=data.start%></td>
					<td><%=data.end%></td>
				<form method="POST" action="appnts">
					<td hidden><input name="sdd" value="<%=data.sid%>" readonly hidden/></td>
					<td><button type="submit" class="btn btn-primary">Click to view details</button></td>
				</form>
			</tr>
			<% }) %>
			<% } else{ %>
			<% } %>
			</table>
			<div id="hos">
				<strong><%=hos%></strong>
			</div>
	</div>
</body>

</html>
