
<!DOCTYPE html>
<html>

<head>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
		integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<title>search result1.0</title>
</head>
<style type="text/css">
	.leftside,
	.rightside {
		height: 100vh;
		width: 100%;
	}
	.issmart1 {
		background-color: black;
		color: white;
	}
	.issmart2 {
		background-color: white;
		color: black;
	}
	.t1 {
		margin: auto;
		width: 90%;
		border: 3px solid darkblue;
	}
	.t2{
		margin:auto;
		width:60%;
		color:beige;
	}
	.isbomb {
		padding: 0px 30px 20px 20px;
	}
	.iwfr {
		padding: 0px 5px 20px 20px;
	}
	.fine{
		padding-top: 5px;
		padding-bottom: 5px;
		background-color: #428bca;
		padding-left: 180px;
		margin: auto;
		color: white;
	}
	#img{
		background-color: black;
	}
	img{
		height: 50px;
	}
</style>

<body>
	<div id="img">
	<img src="https://static1.squarespace.com/static/58c6fc4a37c581154f75cdd2/t/58e662456a496356f0430f90/1604006272177/">
</div>
	<div class="fine">
		<h1><%=user4[0].name %></h1>
	</div>
	<div class="row no gutters">
		<div class="col-md-8 issmart2 no gutters">
			<div class="leftside">
				<div class="isbomb">
					<table class="t1" border="2">
						<tr>
							<th>Speciality</th>
							<th>Doctor</th>
							<th>Day</th>
							<th>Start session</th>
							<th>End session</th>
							<th>Appointment</th>
						</tr>
			<%
			var a=new Array();
			a[0]="Sunday"; a[1]="Monday"; a[2]="Tuesday"; a[3]="Wednesday"; a[4]="Thursday"; a[5]="Friday"; a[6]="Saturday";
			var d=new Date(); var curd=d.getDay()+1; %>
			<%
	        if(user3.length!=0){
	        user3.forEach(function(data){
	        %>
				<tr>
				<form method="POST" action="appointment">
					<td><%=data.dname %></td>
					<td><%=data.docname %></td>
					<td><%=a[data.day-1]%></td>
					<td><%=data.start %></td>
					<td><%=data.end%></td>
					<td hidden><input name="si" value="<%=data.sid%>" hidden readonly /></td>
					<%if(data.day==curd || data.capcnt==0){ %>
						<td>Appointment Unavailable</td>
					<%} else{ %>
					<td><button type="submit" class="btn btn-success">Book an appointment</button></td>
					<%}%>
				</form>
			</tr>
			<% }) %>
			<% }%>
					</table>
				</div>
			</div>
		</div>
		<div class="col-md-4 issmart1 no gutters">
			<div class="rightside">

				<div class="row iwfr">
					<p>
						<h1>About</h1>
					</p>
					<p><%=user4[0].descp%></p>
					<table class="t2">
						<tr>
						<td>Location</td>
						<td><%=user4[0].address %></td>
						</tr>
						<tr>
						<td>Help-desk</td>
						<td><%=user4[0].contact1 %></td>
						</tr>
						<tr>
						<td>Emergency</td>
						<td><%=user4[0].contact2 %></td>
						</tr>
						<tr>
						<td>Email</td>
						<td><%=user4[0].email %></td>
						</tr>
						<tr>
						<td>Beds</td>
						<td><%=user4[0].Beds %></td>
						</tr>
						<tr>
						<td>Ambulances</td>
						<td><%=user4[0].Amb %></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
</body>

