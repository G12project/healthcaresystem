  
<!DOCTYPE html>
<html>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
	integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<head>
	<style type="text/css">
		body{
			margin: auto;
			width: 80%;
			background-color: black;
			padding-top: 40px;
			font-size: 15px;
		}
		#container{
			background-color: white;
			padding: 5px 10px 10px 10px;
		}
		#head{
			background-color: #428bca;
			color: white;
		}
		#table{
			padding: 10px 10px 10px 40px;
		}
		#name{
			padding: 5px 5px 5px 5px;
		}
		#email{
			padding: 5px 5px 5px 5px;
		}
		#pr{
			padding: 5px 5px 5px 5px;
		}
		#pn{
			padding: 5px 5px 5px 5px;
		}
		#button{
			padding: 5px 5px 5px 100px;
		}
		img{
			height: 60px;
		}

	</style>
	<title>appointment</title>
</head>
<body>
	<%
			var a=new Array();
			a[0]="Sunday"; a[1]="Monday"; a[2]="Tuesday"; a[3]="Wednesday"; a[4]="Thursday"; a[5]="Friday"; a[6]="Saturday";
			%>
			<img src="https://static1.squarespace.com/static/58c6fc4a37c581154f75cdd2/t/58e662456a496356f0430f90/1604006272177/">
	<div id="container">
		<div id="head">
			<h3>Your appointment information</h3>
		</div>
		<div id="table">
		<table>
			<tr>
				<td>Doctor Name</td>
				<td><%=data.docname%></td>
			</tr>
			<tr>
				<td>Specialization</td>
				<td><%=data.depname%></td>
			</tr>
			<tr>
				<td>Day</td>
				<td><%=a[data.day-1]%></td>
			</tr>
			<tr>
				<td>Start session</td>
				<td><%=data.startp%></td>
			</tr>
			<tr>
				<td>End session</td>
				<td><%=data.endp%></td>
			</tr>
		</table>
		</div>
		<div id="form">
		<form>
			<div id="name" >
				<label for="first name">First name</label>
				<input type="text" name="fname" placeholder="firstname" required />
				<label for="last name">Last name</label>
				<input type="text" name="lname" placeholder="lastname" required>
			</div>
			<div id="email">
				<label for="email">E-mail</label>
				<input type="email" name="email" placeholder="E-mail"required />
			</div>
			<div id="pr">
				<label>Problems</label>
				<input type="text" name="pb" width="90" height="80" />
			</div>
			<div id="pn">
				<label for="Phoneno">Phone no</label>
				<input type="number" name="pn" placeholder="phoneno" />
			</div>
			<div id="button">
				<button type="submit" class="btn btn-success">Submit</button>
			</div>
		</form>
	</div>
	</div>
</body>
</html>
